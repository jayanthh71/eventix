generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  VENDOR
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  password String
  role     Role    @default(CUSTOMER)
  balance  Float   @default(5000)
  imageUrl String?

  bookings           Booking[]
  passwordResetToken PasswordResetToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EventCategory {
  MOVIE
  CONCERT
}

model Event {
  id          String        @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  date        DateTime
  showtimes   DateTime[]
  location    String
  price       Float
  category    EventCategory

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Train {
  id        String   @id @default(cuid())
  name      String
  number    String
  imageUrl  String?
  departure DateTime
  arrival   DateTime
  from      String
  to        String
  price     Float

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Booking {
  id         String        @id @default(cuid())
  userId     String
  eventId    String?
  trainId    String?
  quantity   Int
  totalPrice Float
  time       DateTime
  status     BookingStatus @default(PENDING)

  user  User   @relation(fields: [userId], references: [id])
  event Event? @relation(fields: [eventId], references: [id])
  train Train? @relation(fields: [trainId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
