generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  VENDOR
  ADMIN
}

enum AuthMethod {
  EMAIL
  DAUTH
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  password String?
  role     Role    @default(CUSTOMER)
  balance  Float   @default(5000)
  imageUrl String?

  DAuthId    String?    @unique
  authMethod AuthMethod @default(EMAIL)

  bookings           Booking[]
  vendorEvents       Event[]
  passwordResetToken PasswordResetToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EventCategory {
  MOVIE
  CONCERT
}

model Event {
  id          String        @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  date        DateTime
  dateArr     DateTime[]
  showtimes   DateTime[]
  location    String
  locationArr String[]
  price       Float
  category    EventCategory

  vendor   User?   @relation(fields: [vendorId], references: [id])
  vendorId String?

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Seat      Seat[]
}

model Train {
  id        String   @id @default(cuid())
  name      String
  number    String
  imageUrl  String?
  departure DateTime
  arrival   DateTime
  from      String
  to        String
  price     Float

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentMethod {
  WALLET
  STRIPE
}

model Seat {
  id       String   @id @default(cuid())
  Event    Event    @relation(fields: [eventId], references: [id])
  eventId  String
  date     DateTime
  location String
  showtime DateTime
  row      String
  number   Int

  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  bookingId String

  @@unique([eventId, date, location, showtime, row, number])
}

model Booking {
  id         String        @id @default(cuid())
  userId     String
  eventId    String?
  trainId    String?
  quantity   Int
  totalPrice Float
  time       DateTime
  location   String?
  status     BookingStatus @default(PENDING)

  paymentMethod   PaymentMethod @default(WALLET)
  paymentIntentId String?       @unique

  user  User   @relation(fields: [userId], references: [id])
  event Event? @relation(fields: [eventId], references: [id])
  train Train? @relation(fields: [trainId], references: [id])

  seats Seat[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
